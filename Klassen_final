class Instruktionen {
 int istX=20;
 int istY=20;
 PFont myFont;
 String instr="test Instruktionen";
 
 //der Konstruktor
 Instruktionen(String _instr) {
   instr=_instr;
 }
 
 void display(){
 textAlign(CENTER, CENTER);  
 myFont=createFont("Arial.vlw", 24);
 textFont(myFont);
 text(instr, width/2 ,height/2);
 }
}
-----------------------------------------------------------------------------------------------
class Memory {
  
  PImage bild;
  int back = 0;
  int cardW = 150;
  int cardH = 200;
  int cardX = 0;
  int cardY = 0;
  int faceValue = 0;
  String[] bildName = {"backside.jpg", "eiskunstl√§uferin.jpg", "football.jpg", "fallschirm.jpg", "skateboard.png", "fallschirmspringer.jpg", "schlittschuh.jpg",  "skater.jpg", "footballplayer.jpg"};
  
  //Konstrunktor
  Memory(int x, int y, int fv) {
   cardX=x;
   cardY=y;
   faceValue=fv;
  }
  
  void display() {
   bild = loadImage(bildName[back]);
   image(bild, cardX, cardY, cardW, cardH);
  }
  
  void displayFront() {
   back = faceValue;
  }
  
  void displayBack() {
   back=0; 
  }
  
}
